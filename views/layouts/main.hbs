<body>	
  	<div class="title">
		<h1> KMeles </h1>
		<section class="navbar">
			<div class="navbar-section">
				<a href="/" class="btn btn-link bg-success">Home</a>
				<a href="/about" class="btn btn-link bg-success">About Me</a>
				<a href="/contact" class="btn btn-link bg-success">Contact</a>
			</div>
			<div class="navbar-section">
				{{#if isLoggedIn}}
					<form method="POST" action="/logout">
    					<input type="hidden" name="_csrf" value="{{ _csrf }}">
						<input type="submit" value="Log Out" class="btn btn-primary">
					</form>
				{{else}}
					<form action="/login" method="post" >
    					<input type="hidden" name="_csrf" value="{{ _csrf }}">
						<input type="submit" value="Log In" class="btn btn-link bg-success">
					</form>
        		{{/if}}
			</div>
		</section>
	</div>
		<div class="columns">
			<div class="sideMenu" >
				<ul class="nav">
					<li class="nav-item active">
						<a href="/blogs">Blogs</a>
						{{#if isLoggedIn}}
							<ul class="nav">
								<li class="nav-item">
									<a href="/blogs/create">Create Blog</a>
								</li>
							</ul>
						{{/if}}
					</li>
					<button>CSRF = {{ _csrf }} </button>
					<li class="nav-item active">
						<a href="/followers">Followers</a>
						<ul class="nav">
							<li class="nav-item">
								<a href="/followers/create">Subscribe</a>
							</li>
						</ul>
					</li>
					<li class="nav-item active">
						<a href="/comments">Comments</a>
					</li>
				</ul>	
			</div>
			<div class="main" style="background-color: rgb(220, 206, 233);">
				<main>{{{body}}}</main>
			</div>
		</div>
	</div>
	
	<footer class="footer">
		<div class="centered">
			Developed by Meles 2021 |
			<a href="/about">About</a> |
			<a href="/contact">Contact</a>
		</div>
	</footer>

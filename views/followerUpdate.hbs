<h1>Update Follower</h1>

{{#if errors.length}}
    <ul>
      {{#each errors}}
        <li> {{this}}</li>
      {{/each}}
    </ul>
  {{/if}}
<form method="POST">
	<div>
		<input type="text" name="date" value="{{follower.date}}">
	</div>
    <div>
		<input type="text" name="firstname" value="{{follower.firstname}}">
	</div>
    <div>
		<input type="text" name="secondname" value="{{follower.secondname}}">
	</div>
    <div>
		<input type="text" name="city" value="{{follower.city}}">
	</div>
	<div>
        <textarea rows = "8" cols = "130" name = "description"> {{follower.description}} </textarea>
	</div> <br>
	<input type="submit" value="Update">
</form>
<h1>Blog </h1>

{{#if blog}}
	<h5>{{blog.title}}  </h5>
	<em>{{blog.date}}</em>
	<p>{{blog.blogEntry}}</p>

	{{#if isLoggedIn}}
		<a href="/blogs/update/{{blog.id}}"><button>Update</button></a> <br><br>
		<form action="/blogs/delete/{{blog.id}}" method="POST">
			<input type="submit" value="Delete">
		</form>	
	{{/if}}
	<a href="/comments/create"><button>Comment</button></a>
	
{{else}}
	<p>No blog with that id exists.</p>
{{/if}}